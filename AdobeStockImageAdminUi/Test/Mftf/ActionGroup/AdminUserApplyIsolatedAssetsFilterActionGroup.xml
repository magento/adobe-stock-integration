<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminUserApplyIsolatedAssetsFilterActionGroup">
        <click selector="{{AdobeStockFilterSection.filters}}" stepKey="expandFilters"/>
        <waitForPageLoad stepKey="waitForFiltersOpen"/>
        <click selector="{{AdobeStockFilterSection.isolatedFilterCheckbox}}" stepKey="selectIsolatedAssetsFilter"/>
        <click selector="{{AdminGridFilterControls.applyFilters}}" stepKey="clickOnApplyFilters"/>
    </actionGroup>
</actionGroups>
