<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSearchImagesOnModalActionGroup">
        <arguments>
            <argument name="query" type="string" defaultValue=""/>
        </arguments>
        <fillField selector="{{AdminAdobeStockSection.searchInput}}" userInput="{{query}}" stepKey="fillQueryInput"/>
        <click selector="{{AdminAdobeStockSection.searchButton}}" stepKey="applySearch"/>
        <waitForLoadingMaskToDisappear stepKey="waitForSearchForQuery"/>
    </actionGroup>
</actionGroups>
