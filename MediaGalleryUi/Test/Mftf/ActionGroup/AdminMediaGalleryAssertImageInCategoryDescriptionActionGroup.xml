<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminMediaGalleryAssertImageInCategoryDescriptionActionGroup">
        <arguments>
            <argument name="imageName" type="string" defaultValue="{{AdobeStockImageData.name}}"/>
        </arguments>
        <click selector="#togglecategory_form_description" stepKey="clickShowHideBtn"/>
        <seeElement selector="{{imageName}}" stepKey="seeImageElement"/>
        <click selector="#togglecategory_form_description" stepKey="clickShowHideBtnToShowWysiwyg"/>
    </actionGroup>
</actionGroups>
