<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <filters name="listing_filters">
            <filterSelect name="directory_filter" provider="${ $.parentName }" sortOrder="10">
                <settings>
                    <caption translate="true">All</caption>
                    <options class="Magento\MediaGalleryUi\Ui\Component\Listing\Columns\DirectoryTree"/>
                    <label translate="true">Media Directory Tree</label>
                    <dataScope>directory_filter</dataScope>
                </settings>
            </filterSelect>
        </filters>
    </listingToolbar>
    <columns name="masonry_images_columns">
        <column name="directory">
            <settings>
                <filter>select</filter>
                <label translate="true">Directory</label>
                <dataType>select</dataType>
                <visible>false</visible>
                <sortable>true</sortable>
            </settings>
        </column>
    </columns>
</listing>
