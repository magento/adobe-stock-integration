<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <adobe_stock>
            <integration>
                <enabled>1</enabled>
                <api_key backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <private_key backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <environment>PROD</environment>
                <product_name>magento-adobe-stock-integration</product_name>
                <token_url>https://ims-na1.adobelogin.com/ims/token</token_url>
                <auth_url_pattern><![CDATA[https://ims-na1.adobelogin.com/ims/authorize?client_id=#{client_id}&redirect_uri=#{redirect_uri}&locale=#{locale}&scope=openid&response_type=code]]></auth_url_pattern>
            </integration>
        </adobe_stock>
    </default>
</config>
